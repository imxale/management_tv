{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    {% if app.user %}
        <div class="mb-3">
            Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% else %}
        <div class="mb-3">
            Tu n'es pas connecté, connecte toi ou créé un compte <a href="{{ path('app_login') }}">Connexion</a> <a href="{{ path('app_register') }}">Création de compte</a>
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            <ul>
                <li><a href="{{ path('app_genre_index') }}">Genre</a></li>
                <li><a href="{{ path('app_categoriecsa_index') }}">Categorie CSA</a></li>
                <li><a href="{{ path('app_user_index') }}">User</a></li>
            </ul>
        </div>
    {% endif %}


